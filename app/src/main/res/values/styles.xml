<resources>
    <style name="ActivityTV">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ActivityBTN" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginTop">@dimen/layuot_44dp</item>
        <item name="android:backgroundTint">@color/YP_white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="cornerRadius">@dimen/layuot_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/layuot_8dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/YP_black</item>
    </style>

    <style name="settingsItem">
        <item name="android:paddingStart">@dimen/layuot_0dp</item>
        <item name="android:textColor">?attr/black_white</item>
        <item name="android:textSize">16sp</item>
        <item name="drawableTint">?attr/white_gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="searchStyle">
        <item name="android:paddingStart">0dp</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textColorHint">?attr/gray_black</item>
        <item name="android:textSize">16sp</item>
        <item name="drawableTint">?attr/gray_black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="textStyle16">
        <item name="android:textColor">?attr/black_white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="textStyle11">
        <item name="android:textColor">?attr/gray_white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="textButtonStyle14">
        <item name="android:backgroundTint">?attr/black_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textStyle19">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">?attr/black_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="MyToolbarTitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">22sp</item>
        <item name="android:titleTextColor">?attr/black_white</item>
        <item name="navigationIconTint">?attr/black_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

</resources>