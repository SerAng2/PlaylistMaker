<resources >
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    </style>

    <style name="SettingsActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:screenOrientation">portrait</item>
        <item name="mainTheme">@color/YP_blue</item>
        <item name="white_black">@color/YP_white</item>
        <item name="black_white">@color/YP_black</item>
        <item name="white_gray">@color/YP_white</item>
        <item name="gray_black">@color/YP_Text_Gray</item>
        <item name="gray_white">@color/YP_Text_Gray</item>
        <item name="gray_red">@color/YP_Text_Gray</item>
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <!-- Добавьте новый стиль для табов -->
    <style name="MyTabTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>  <!-- Отключаем капс -->
        <item name="android:textColor">@color/YP_black</item>  <!-- Черный цвет, как в вашем XML -->
        <item name="android:textSize">14sp</item>  <!-- Размер, если хотите зафиксировать -->
    </style>
</resources>
