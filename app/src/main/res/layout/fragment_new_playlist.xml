<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/backPlaylist"
        android:layout_width="0dp"
        android:layout_height="@dimen/layout_56dp"
        app:layout_constraintBottom_toTopOf="@id/addImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Новый плейлист"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="?attr/black_white"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftBorder24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightBorder24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <ImageView
        android:id="@+id/addImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/add_image"
        android:scaleType="center"
        android:src="@drawable/ic_add_image"
        app:layout_constraintBottom_toTopOf="@id/textInput1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/rightBorder24dp"
        app:layout_constraintStart_toStartOf="@id/leftBorder24dp"
        app:layout_constraintTop_toBottomOf="@+id/backPlaylist" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/textsBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="textInput1,textInput2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftBorder16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightBorder16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInput1"
        style="@style/CustomOutlinedTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_16dp"
        android:hint="Название*"
        app:layout_constraintBottom_toTopOf="@id/textInput2"
        app:layout_constraintEnd_toEndOf="@id/rightBorder16dp"
        app:layout_constraintStart_toStartOf="@id/leftBorder16dp"
        app:layout_constraintTop_toBottomOf="@id/addImage">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInput2"
        style="@style/CustomOutlinedTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Описание"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        app:layout_constraintEnd_toEndOf="@id/rightBorder16dp"
        app:layout_constraintStart_toStartOf="@id/leftBorder16dp"
        app:layout_constraintTop_toBottomOf="@id/textInput1">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottom"
        style="@style/textStyle16_option2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="32dp"
        android:text="Создать"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/rightBorder16dp"
        app:layout_constraintStart_toStartOf="@id/leftBorder16dp"
        app:layout_constraintTop_toBottomOf="@id/textInput2" />

</androidx.constraintlayout.widget.ConstraintLayout>