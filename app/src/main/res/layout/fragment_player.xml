<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/white_black"
    tools:context="com.example.playlistMaker.player.presentation.ui.PlayerFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/leftBorder24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/layout_24dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/rightBorder24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/layout_24dp" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/backPlaylist"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="@dimen/layout_56dp"
                app:layout_constraintBottom_toTopOf="@id/coverPlaylist"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/ic_back"
                app:navigationIconTint="?attr/black_white" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/coverPlaylist"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="@dimen/layout_0dp"
                android:layout_marginTop="@dimen/layout_26dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@id/nameAlbum"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="@id/rightBorder24dp"
                app:layout_constraintStart_toStartOf="@id/leftBorder24dp"
                app:layout_constraintTop_toBottomOf="@+id/backPlaylist" />

            <TextView
                android:id="@+id/nameAlbum"
                style="@style/textStyle22"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_24dp"
                app:layout_constraintBottom_toTopOf="@id/nameMusic"
                app:layout_constraintEnd_toEndOf="@id/rightBorder24dp"
                app:layout_constraintStart_toStartOf="@id/leftBorder24dp"
                app:layout_constraintTop_toBottomOf="@+id/coverPlaylist" />

            <TextView
                android:id="@+id/nameMusic"
                style="@style/textStyle14_option1"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_12dp"
                app:layout_constraintBottom_toTopOf="@id/playButton"
                app:layout_constraintEnd_toEndOf="@id/rightBorder24dp"
                app:layout_constraintStart_toStartOf="@id/leftBorder24dp"
                app:layout_constraintTop_toBottomOf="@+id/nameAlbum" />

            <ImageView
                android:id="@+id/playButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_30dp"
                android:contentDescription="Play/Pause"
                android:src="@drawable/ic_play"
                app:layout_constraintBottom_toTopOf="@id/playingTime"
                app:layout_constraintEnd_toStartOf="@id/favourites"
                app:layout_constraintStart_toEndOf="@id/add"
                app:layout_constraintTop_toBottomOf="@+id/nameMusic"
                app:tint="?attr/black_white" />

            <ImageView
                android:id="@+id/favourites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favourites"
                app:layout_constraintBottom_toBottomOf="@id/playButton"
                app:layout_constraintEnd_toEndOf="@id/rightBorder24dp"
                app:layout_constraintTop_toTopOf="@id/playButton" />

            <ImageView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                app:layout_constraintBottom_toBottomOf="@id/playButton"
                app:layout_constraintStart_toStartOf="@id/leftBorder24dp"
                app:layout_constraintTop_toTopOf="@id/playButton" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/leftBorder16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/layout_16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/rightBorder16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/layout_16dp" />

            <TextView
                android:id="@+id/playingTime"
                style="@style/textStyle14_option1"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_4dp"
                android:text="00:00"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@id/duration"
                app:layout_constraintEnd_toEndOf="@id/rightBorder16dp"
                app:layout_constraintStart_toStartOf="@id/leftBorder16dp"
                app:layout_constraintTop_toBottomOf="@+id/playButton" />

            <TextView
                android:id="@+id/duration"
                style="@style/textStyle13colorGray"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_32dp"
                android:layout_marginTop="@dimen/layout_28dp"
                android:text="@string/duration"
                app:layout_constraintStart_toStartOf="@id/leftBorder16dp"
                app:layout_constraintTop_toBottomOf="@+id/playingTime" />

            <TextView
                android:id="@+id/durationTime"
                style="@style/textStyle13"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="@dimen/layout_32dp"
                app:layout_constraintBottom_toBottomOf="@id/duration"
                app:layout_constraintEnd_toEndOf="@id/rightBorder16dp"
                app:layout_constraintStart_toEndOf="@id/duration"
                app:layout_constraintTop_toTopOf="@id/duration" />

            <TextView
                android:id="@+id/album"
                style="@style/textStyle13colorGray"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_32dp"
                android:text="@string/album"
                app:layout_constraintStart_toStartOf="@id/leftBorder16dp"
                app:layout_constraintTop_toBottomOf="@+id/duration" />

            <TextView
                android:id="@+id/albumName"
                style="@style/textStyle13"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="@dimen/layout_32dp"
                app:layout_constraintBottom_toBottomOf="@id/album"
                app:layout_constraintEnd_toEndOf="@id/rightBorder16dp"
                app:layout_constraintStart_toEndOf="@id/album"
                app:layout_constraintTop_toTopOf="@id/album" />

            <TextView
                android:id="@+id/year"
                style="@style/textStyle13colorGray"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_32dp"
                android:text="@string/year"
                app:layout_constraintStart_toStartOf="@id/leftBorder16dp"
                app:layout_constraintTop_toBottomOf="@+id/album" />

            <TextView
                android:id="@+id/yearMusic"
                style="@style/textStyle13"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="@dimen/layout_32dp"
                app:layout_constraintBottom_toBottomOf="@id/year"
                app:layout_constraintEnd_toEndOf="@id/rightBorder16dp"
                app:layout_constraintStart_toEndOf="@id/year"
                app:layout_constraintTop_toTopOf="@id/year" />


            <TextView
                android:id="@+id/genre"
                style="@style/textStyle13colorGray"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_32dp"
                android:text="@string/genre"
                app:layout_constraintStart_toStartOf="@id/leftBorder16dp"
                app:layout_constraintTop_toBottomOf="@+id/year" />

            <TextView
                android:id="@+id/genreMusic"
                style="@style/textStyle13"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="@dimen/layout_32dp"
                app:layout_constraintBottom_toBottomOf="@id/genre"
                app:layout_constraintEnd_toEndOf="@id/rightBorder16dp"
                app:layout_constraintStart_toEndOf="@id/genre"
                app:layout_constraintTop_toTopOf="@id/genre" />

            <TextView
                android:id="@+id/country"
                style="@style/textStyle13colorGray"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_32dp"
                android:layout_marginBottom="@dimen/layout_20dp"
                android:text="@string/country"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/leftBorder16dp"
                app:layout_constraintTop_toBottomOf="@id/genre" />

            <TextView
                android:id="@+id/countryMusic"
                style="@style/textStyle13"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="@dimen/layout_32dp"
                android:layout_marginBottom="@dimen/layout_20dp"
                app:layout_constraintBottom_toBottomOf="@id/country"
                app:layout_constraintEnd_toEndOf="@id/rightBorder16dp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@id/country"
                app:layout_constraintTop_toTopOf="@id/country"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <View android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/standardBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_botton_sheet"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="505dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@color/YP_lightGray" />

        <TextView
            style="@style/textStyles19_option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/layout_12dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="Добавить в плейлист"
            android:textColor="@color/YP_black" />

        <com.google.android.material.button.MaterialButton
            style="@style/textButtonStyle14_option3"
            android:id="@+id/newPlaylistButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/layout_16dp"
            android:text="Новый плейлист" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playlistsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_24dp"
            />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>