<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/white_black" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftBorder24dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/layuot_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightBorder24dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/layuot_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/backPlaylist"
        android:layout_width="@dimen/layuot_0dp"
        android:layout_height="@dimen/layuot_56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/coverPlaylist"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="?attr/black_white"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/coverPlaylist"
        android:layout_width="@dimen/layuot_0dp"
        android:layout_height="@dimen/layuot_0dp"
        android:layout_marginTop="@dimen/layuot_26dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/nameAlbum"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/rightBorder24dp"
        app:layout_constraintStart_toStartOf="@id/leftBorder24dp"
        app:layout_constraintTop_toBottomOf="@+id/backPlaylist" />

    <TextView
        android:id="@+id/nameAlbum"
        style="@style/textStyle22"
        android:layout_width="@dimen/layuot_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layuot_24dp"
        app:layout_constraintStart_toStartOf="@id/leftBorder24dp"
        app:layout_constraintEnd_toEndOf="@id/rightBorder24dp"
        app:layout_constraintTop_toBottomOf="@+id/coverPlaylist"
        app:layout_constraintBottom_toTopOf="@id/nameMusic"/>

    <TextView
        android:id="@+id/nameMusic"
        style="@style/textStyle14"
        android:layout_width="@dimen/layuot_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layuot_12dp"
        app:layout_constraintStart_toStartOf="@id/leftBorder24dp"
        app:layout_constraintEnd_toEndOf="@id/rightBorder24dp"
        app:layout_constraintTop_toBottomOf="@+id/nameAlbum"
        app:layout_constraintBottom_toTopOf="@id/playButton"/>

        <ImageView
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layuot_30dp"
        android:src="@drawable/ic_play"
        android:contentDescription="Play/Pause"
        app:tint="?attr/black_white"

        app:layout_constraintTop_toBottomOf="@+id/nameMusic"
        app:layout_constraintEnd_toStartOf="@id/favourites"
        app:layout_constraintStart_toEndOf="@id/add"
        app:layout_constraintBottom_toTopOf="@id/playingTime" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/favourites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favourites"
        app:layout_constraintBottom_toBottomOf="@id/playButton"
        app:layout_constraintEnd_toEndOf="@id/rightBorder24dp"
        app:layout_constraintTop_toTopOf="@id/playButton" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="@id/playButton"
        app:layout_constraintStart_toStartOf="@id/leftBorder24dp"
        app:layout_constraintTop_toTopOf="@id/playButton" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftBorder16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/layuot_16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightBorder16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/layuot_16dp" />

    <TextView
        android:id="@+id/playingTime"
        style="@style/textStyle14"
        android:layout_width="@dimen/layuot_0dp"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:layout_marginTop="@dimen/layuot_4dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@id/rightBorder16dp"
        app:layout_constraintStart_toStartOf="@id/leftBorder16dp"
        app:layout_constraintTop_toBottomOf="@+id/playButton"
        app:layout_constraintBottom_toTopOf="@id/duration"/>

        <TextView
            android:id="@+id/duration"
            style="@style/textStyle13colorGray"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layuot_32dp"
            android:layout_marginTop="@dimen/layuot_28dp"
            android:text="@string/duration"
            app:layout_constraintStart_toStartOf="@id/leftBorder16dp"
            app:layout_constraintTop_toBottomOf="@+id/playingTime" />

        <TextView
        android:id="@+id/durationTime"
        style="@style/textStyle13"
        android:layout_width="@dimen/layuot_0dp"
        android:layout_height="@dimen/layuot_32dp"
        app:layout_constraintBottom_toBottomOf="@id/duration"
        app:layout_constraintEnd_toEndOf="@id/rightBorder16dp"
        app:layout_constraintStart_toEndOf="@id/duration"
        app:layout_constraintTop_toTopOf="@id/duration"  />

    <TextView
        android:id="@+id/album"
        style="@style/textStyle13colorGray"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layuot_32dp"
        android:text="@string/album"
        app:layout_constraintStart_toStartOf="@id/leftBorder16dp"
        app:layout_constraintTop_toBottomOf="@+id/duration"/>

        <TextView
            android:id="@+id/albumName"
            style="@style/textStyle13"
            android:layout_width="@dimen/layuot_0dp"
            android:layout_height="@dimen/layuot_32dp"
            app:layout_constraintBottom_toBottomOf="@id/album"
            app:layout_constraintEnd_toEndOf="@id/rightBorder16dp"
            app:layout_constraintStart_toEndOf="@id/album"
            app:layout_constraintTop_toTopOf="@id/album" />

        <TextView
        android:id="@+id/year"
        style="@style/textStyle13colorGray"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layuot_32dp"
        android:text="@string/year"
        app:layout_constraintStart_toStartOf="@id/leftBorder16dp"
        app:layout_constraintTop_toBottomOf="@+id/album" />

    <TextView
        android:id="@+id/yearMusic"
        style="@style/textStyle13"
        android:layout_width="@dimen/layuot_0dp"
        android:layout_height="@dimen/layuot_32dp"
        app:layout_constraintBottom_toBottomOf="@id/year"
        app:layout_constraintEnd_toEndOf="@id/rightBorder16dp"
        app:layout_constraintStart_toEndOf="@id/year"
        app:layout_constraintTop_toTopOf="@id/year"/>


    <TextView
        android:id="@+id/genre"
        style="@style/textStyle13colorGray"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layuot_32dp"
        android:text="@string/genre"
        app:layout_constraintStart_toStartOf="@id/leftBorder16dp"
        app:layout_constraintTop_toBottomOf="@+id/year" />

        <TextView
            android:id="@+id/genreMusic"
            style="@style/textStyle13"
            android:layout_width="@dimen/layuot_0dp"
            android:layout_height="@dimen/layuot_32dp"
            app:layout_constraintBottom_toBottomOf="@id/genre"
            app:layout_constraintEnd_toEndOf="@id/rightBorder16dp"
            app:layout_constraintStart_toEndOf="@id/genre"
            app:layout_constraintTop_toTopOf="@id/genre" />

        <TextView
        android:id="@+id/country"
        style="@style/textStyle13colorGray"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layuot_32dp"
        android:layout_marginBottom="@dimen/layuot_20dp"
        android:text="@string/country"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/leftBorder16dp"
        app:layout_constraintTop_toBottomOf="@id/genre" />

        <TextView
            android:id="@+id/countryMusic"
            style="@style/textStyle13"
            android:layout_width="@dimen/layuot_0dp"
            android:layout_height="@dimen/layuot_32dp"
            android:layout_marginBottom="@dimen/layuot_20dp"
            app:layout_constraintBottom_toBottomOf="@id/country"
            app:layout_constraintEnd_toEndOf="@id/rightBorder16dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/country"
            app:layout_constraintTop_toTopOf="@id/country"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>